<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtVwFieldsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_05"
            android:layout_marginLeft="@dimen/view_spacing"
            android:layout_marginStart="@dimen/view_spacing"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/view_spacing_05"
            android:textSize="@dimen/font_title"
            tools:drawableLeft="@drawable/ic_call_gray_24dp"
            tools:drawableStart="@drawable/ic_call_gray_24dp"
            tools:text="Picture"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_05"
            android:layout_marginEnd="@dimen/view_spacing"
            android:layout_marginLeft="@dimen/view_spacing"
            android:layout_marginRight="@dimen/view_spacing"
            android:layout_marginStart="@dimen/view_spacing"
            android:layout_marginBottom="@dimen/view_spacing_05"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="3dp"
            app:contentPadding="@dimen/view_spacing_05"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/lnrLytFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>